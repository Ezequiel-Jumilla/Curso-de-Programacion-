<div id="novedadesadmin">
    <h2>NOVEDADES</h2>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table" id="tabla">
                <thead id="headtabla">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">TITULO</th>
                        <th scope="col">IMAGEN</th>
                        <th scope="col" class="text-right"><a href="/admin/novedades/agregar" class="btn btn-succes" style="color: white;"><i class="fa fa-plus" style="font-size: 15px; padding: 3px; width: 18px; align-content: center;"></i>NUEVO</a></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/editar/{{id}}" class="btn btn-secondary"><i class="fa fa-edit" style="font-size: 15px; padding: 3px; width: 18px; align-content: center;"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fa fa-trash" style="font-size: 15px; padding: 3px; width: 18px; align-content: center;"></i></a>
                        </td>
                        {{/each}}
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>