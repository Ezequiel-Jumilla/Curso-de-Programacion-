<div class="container" style="margin:100px auto">
    <h2 style="text-align:center">EDITAR NOVEDAD</h2>
    <form style="padding-right:13rem; padding-left:13rem;" action="/admin/novedades/editar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{novedad.id}}" name="id">
        <div class="form-group">
            <label for="">Titulo</label>
            <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
        </div>
        <div class="form-group">
            <label for="">Fuente</label>
            <input type="text" class="form-control" name="fuente" value="{{novedad.fuente}}">
        </div>
        <div class="form-group">
            <label for="">Noticia</label>
            <textarea name="noticia" class="form-control">{{novedad.noticia}}</textarea>
        </div>
        <div class="form-group">
            <p>
                <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen" /></label>
            </p>
            <p>
                <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                    Desea eliminar la imagen?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
            </p>
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
</div>
